    <script type ="text/javascript">
    
$(document).ready(function (){
    var socket = io.connect();
    $('#send_msg').submit(function(event){
        socket.emit('new_text', {text: $('#new_txt').val()})
        event.preventDefault();
    })

    socket.on('get_chat', function(data){
        chatlog = data.clog;
        console.log(data.clog);
        $.each(data.clog, function(i,val){
            $('#msg_box').append("<p>" + chatlog[i] + "</p>"); 
        })

        
    })
  
    socket.emit('get_chatlog', {});
})
    </script>
